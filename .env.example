# Polymath v4 Environment Configuration
# Copy to .env and fill in your values

# PostgreSQL (required)
POSTGRES_DSN=dbname=polymath user=polymath host=/var/run/postgresql

# Neo4j (required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=polymathic2026

# Google Cloud (required for concept extraction)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT=your-project-id
GCP_LOCATION=us-central1
GCS_BUCKET=your-bucket-name

# GitHub (optional, increases rate limits)
GITHUB_TOKEN=ghp_your_token_here

# HuggingFace (optional, for private models)
HF_TOKEN=hf_your_token_here

# Processing
NUM_WORKERS=4
